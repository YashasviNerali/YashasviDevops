<?xml version="1.0" encoding="UTF-8"?>

<archetype-descriptor xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
                      name="jvxapplication-archetype">
  <requiredProperties>
    <requiredProperty key="jvx-version">
      <defaultValue>2.7</defaultValue>
    </requiredProperty>
  </requiredProperties>    
    
  <fileSets>
    <fileSet filtered="true">
      <directory></directory>
      <includes>
        <include>**/*</include>
      </includes>
      <excludes>
        <exclude>**/src/main/java/**</exclude>
        <exclude>**/src/main/resources/**</exclude>
        <exclude>**/src/test/java/**</exclude>
        <exclude>**/src/test/resources/**</exclude>
      </excludes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>__artifactId__-war/src/main/java</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>__artifactId__-war/src/test/java</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>__artifactId__-server/src/main/java</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>__artifactId__-server/src/main/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>__artifactId__-server/src/test/java</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>__artifactId__-server/src/test/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>__artifactId__-client/src/main/java</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>__artifactId__-client/src/main/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>__artifactId__-client/src/test/java</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>__artifactId__-client/src/test/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
